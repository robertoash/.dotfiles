# Defaults
export EDITOR="hx"
export IDE="cursor"
export TERMINAL="alacritty"
export COLORTERM="truecolor"
export TERM="xterm-256color"
export BROWSER="vivaldi --profile-directory=rash %s"
export BROWSER_CLEAN="vivaldi"
export NOTE_EDITOR="obsidian"
export VISUAL="hx"

# GTK

export CURRENT_PROJECT_DIR="/home/rash/dev/apps"
export DOTFILES_DIR="/home/rash/.config"

# File locations
export XDG_CONFIG_HOME="$HOME/.config"
export ZELLIJ_CONFIG_FILE=~/.config/zellij/config.kdl
export GTK2_RC_FILES="$HOME/.config/gtk-2.0/gtkrc-2.0"
export YARN_RC_FILENAME=~/.config/yarn/.yarnrc
export ASDF_DATA_DIR="/home/rash/.asdf"

# Fd ignore
export FD_IGNORE_FILE="~/.config/fd/ignore"

# Taskwarrior
export TASKRC="$HOME/.config/task/taskrc"
export TASKDATA="$HOME/.config/task/.task"

# Walk
export WALK_REMOVE_CMD=trash
export WALK_MAIN_COLOR="#010111"
export WALK_STATUS_BAR="Size() + ' ' + Mode()"

# Docker
export DOCKER_BUILDKIT=1

# Starship config
export STARSHIP_CONFIG="$HOME/.config/starship/starship.toml"
# Secrets
eval $(/home/rash/.config/scripts/shell/secure_env_secrets.py)
