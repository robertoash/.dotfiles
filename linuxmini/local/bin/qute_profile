#!/usr/bin/env bash

if [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
    echo "Usage: qute_profile <profile> [url...]"
    echo "Launch qutebrowser with a specific profile"
    echo ""
    echo "Arguments:"
    echo "  profile    Profile name (directory under ~/.config/qutebrowser/profiles)"
    echo "  url        Optional URLs to open"
    exit 0
fi

PROFILE=$1
shift  # Remove the profile argument

QUTE_BASE="$HOME/.config/qutebrowser/profiles/$PROFILE"

if [ ! -d "$QUTE_BASE" ]; then
    echo "‚ùå Profile '$PROFILE' doesn't exist."
    exit 1
fi

# Pass all remaining arguments to qutebrowser
qutebrowser --basedir "$QUTE_BASE" "$@" &
disown
