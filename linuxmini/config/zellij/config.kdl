keybinds clear-defaults=true {
    normal {
        bind "enter" {
            WriteChars "\r"
        }
    }
    locked {
        bind "Alt ." {
            SwitchToMode "normal"
        }
    }
    resize {
        bind "+" { Resize "Increase"; }
        bind "-" { Resize "Decrease"; }
        bind "h" { Resize "Increase left"; }
        bind "j" { Resize "Increase down"; }
        bind "k" { Resize "Increase up"; }
        bind "l" { Resize "Increase right"; }
    }
    scroll {
        bind "b" { PageScrollUp; }
        bind "f" { PageScrollDown; }
        bind "s" { SwitchToMode "entersearch"; SearchInput 0; }
    }
    search {
        bind "c" { SearchToggleOption "CaseSensitivity"; }
        bind "n" { Search "down"; }
        bind "o" { SearchToggleOption "WholeWord"; }
        bind "p" { Search "up"; }
        bind "w" { SearchToggleOption "Wrap"; }
    }
    shared_except "locked" {
        // Focus Movement
        bind "Alt h" { MoveFocus "left"; }
        bind "Alt j" { MoveFocus "down"; }
        bind "Alt k" { MoveFocus "up"; }
        bind "Alt l" { MoveFocus "right"; }

        // Pane Movement
        bind "Alt Shift h" { MovePane "left"; }
        bind "Alt Shift j" { MovePane "down"; }
        bind "Alt Shift k" { MovePane "up"; }
        bind "Alt Shift l" { MovePane "right"; }

        // Pane Creation
        bind "Alt +" { NewPane "right"; }
        bind "Alt -" { NewPane "down"; }
        bind "Alt n" { NewPane; }
        bind "Alt Shift n" { NewPane "stacked"; }

        // Pane Operations
        bind "Alt b" { BreakPane; }
        bind "Alt Shift b" { BreakPaneLeft; }
        bind "Alt p" { TogglePanePinned; }
        bind "Alt x" { CloseFocus; }

        // Fullscreen/Floating/Embed
        bind "Alt f" { ToggleFloatingPanes; }
        bind "Alt m" { ToggleFocusFullscreen; }
        bind "Alt Shift f" { TogglePaneEmbedOrFloating; }

        // Tab Navigation
        bind "Alt 1" { GoToTab 1; SwitchToMode "normal"; }
        bind "Alt 2" { GoToTab 2; SwitchToMode "normal"; }
        bind "Alt 3" { GoToTab 3; SwitchToMode "normal"; }
        bind "Alt 4" { GoToTab 4; SwitchToMode "normal"; }
        bind "Alt 5" { GoToTab 5; SwitchToMode "normal"; }
        bind "Alt 8" { GoToPreviousTab; }
        bind "Alt 9" { GoToNextTab; }

        // Tab Movement
        bind "Alt Shift 8" { MoveTab "Left"; }
        bind "Alt Shift 9" { MoveTab "Right"; }

        // Tab Creation/Closing
        bind "Alt t" { NewTab; }
        bind "Alt Shift x" { CloseTab; }

        // Tab Renaming
        bind "Alt Shift t" { TabNameInput 0; SwitchToMode "renametab"; }

        // Resize
        bind "Alt ?" { Resize "Increase"; }
        bind "Alt _" { Resize "Decrease"; }
        bind "Alt r" { SwitchToMode "resize"; }

        // Layout Swapping
        bind "Alt o" { NextSwapLayout; }
        bind "Alt Shift o" { PreviousSwapLayout; }

        // Scrolling
        bind "Ctrl d" { HalfPageScrollDown; }
        bind "Ctrl u" { HalfPageScrollUp; }

        // Search
        bind "Alt Shift 7" { SwitchToMode "entersearch"; SearchInput 0; }

        // Scrollback Editor
        bind "Alt e" { EditScrollback; }

        // Plugins
        bind "Alt 0" {
            LaunchOrFocusPlugin "zellij:session-manager" {
                floating true
            }
        }
        bind "Alt s" {
            LaunchOrFocusPlugin "zellij:session-manager" {
                floating true
                move_to_focused_tab true
            }
            SwitchToMode "normal"
        }
        bind "F1" {
            LaunchOrFocusPlugin "file:/home/rash/.config/zellij/plugins/zellij_forgot.wasm" {
                floating true
            }
        }

        // Session Management
        bind "Alt q" { Detach; }

        // Mode Switching
        bind "Alt ." { SwitchToMode "locked"; }
    }
    shared_except "normal" "locked" "entersearch" {
        bind "enter" { SwitchToMode "normal"; }
    }
    shared_except "normal" "locked" "scroll" "search" {
        bind "esc" { SwitchToMode "normal"; }
    }
    shared_among "scroll" "search" {
        bind "d" { HalfPageScrollDown; }
        bind "e" { EditScrollback; SwitchToMode "normal"; }
        bind "esc" { ScrollToBottom; SwitchToMode "normal"; }
        bind "j" { ScrollDown; }
        bind "k" { ScrollUp; }
        bind "u" { HalfPageScrollUp; }
    }
    entersearch {
        bind "enter" { SwitchToMode "search"; }
    }
    renametab {
        bind "enter" { SwitchToMode "normal"; }
        bind "esc" { UndoRenameTab; SwitchToMode "normal"; }
    }
}

