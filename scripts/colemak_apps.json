{
  "version": "1.0.0",
  "description": "Configuration for application-specific Colemak remapping",
  "apps": {
    "neovim": {
      "enabled": true,
      "modes": ["insert"],
      "description": "Neovim gets Colemak only in insert mode, keeps QWERTY hjkl for navigation",
      "config_method": "langmap"
    },
    "chromium": {
      "enabled": false,
      "modes": ["typing"],
      "preserve_keys": ["h", "j", "k", "l"],
      "remap_displaced": true,
      "description": "Chromium gets Colemak for typing, preserves hjkl for vim plugins, remaps displaced keys",
      "config_method": "browser_extension"
    },
    "qutebrowser": {
      "enabled": false,
      "modes": ["typing"],
      "preserve_keys": ["h", "j", "k", "l"],
      "remap_displaced": true,
      "description": "Qutebrowser gets Colemak for typing, preserves hjkl for navigation, remaps displaced keys",
      "config_method": "qutebrowser_config"
    },
    "cursor": {
      "enabled": false,
      "modes": ["typing"],
      "description": "Cursor/VS Code gets Colemak for typing",
      "config_method": "vscode_keybindings"
    }
  },
  "global_settings": {
    "colemak_langmap": "ef,rp,tg,yj,ul,iu,oy,p√∂",
    "displaced_keys": {
      "l": "i",
      "j": "e", 
      "k": "n"
    }
  }
}